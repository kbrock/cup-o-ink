<% @printers.each do |printer| %>
  <h1 class="page-header"><%= printer[:name] %></h1>
  <dl>
    <dt>Model</dt>
    <dd><%= printer[:info] %></dd>
    <dt>Location</dt>
    <dd><%= printer[:location] %></dd>
  </dl>
  <% if printer[:toner_info].present? %>
  <table class="table table-striped table-condensed">
   <thead>
    <tr>
      <td>%</td><td>Color</td><td>Toner name</td><td>Type</td>
    </tr>
  </thead>
  <tbody>
  <% printer[:toner_info].each do |toner| %>
   <tr class='<%= toner[:class] %>'>
     <td><%= toner[:level] %>%</td>
     <% if toner[:color].size==7 and toner[:color].match("^#") %>
       <td><font color="<%= toner[:color]%>"><%= toner[:color] %></font></td>
     <% else %>
       <td><%= toner[:color] %></td>
     <% end %>
     <td><%= toner[:name] %></td>
     <td><%= toner[:type] %></td>
   </tr>
 <% end %>
 </tbody>
 </table>
 <% end %>
 <hr />
<% end %>
<% CupsPrinter.close %>
